{
	"name": "api",
	"version": "1.0.0",
	"description": "Api for Authentication with typescript",
	"main": "src/app.ts",
	"type": "module",
	"scripts": {
		"dev": "NODE_ENV=development nodemon --no-deprecation --exec tsx src/app.ts",
		"start": "NODE_ENV=production node build/app.js",
		"build": "tsc",
		"lint": "eslint . --fix",
		"format": "prettier --write .",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "dotenv -e .env.development -- npx prisma migrate dev",
		"seed": "tsx prisma/seed.ts"
	},
	"author": "Mikael Aditya Nugroho",
	"license": "ISC",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.758.0",
		"@prisma/client": "^6.4.1",
		"bcrypt": "^5.1.1",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"csrf-sync": "^4.0.3",
		"dotenv": "^16.4.7",
		"envalid": "^8.0.0",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.0",
		"express-session": "^1.18.1",
		"helmet": "^8.0.0",
		"http-status-codes": "^2.3.0",
		"jsonwebtoken": "^9.0.2",
		"mailersend": "^2.3.0",
		"moment-timezone": "^0.5.47",
		"multer": "^1.4.5-lts.1",
		"slugify": "^1.6.6",
		"winston": "^3.17.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.20.0",
		"@types/bcrypt": "^5.0.2",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/express-session": "^1.18.1",
		"@types/jsonwebtoken": "^9.0.8",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.10.10",
		"eslint": "^9.19.0",
		"prettier": "^3.4.2",
		"prisma": "^6.4.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.23.0"
	}
}
